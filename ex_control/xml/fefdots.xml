<stimulus name="fefdots" repeats="10" ex="ex_activeFixation" bgColor="0 0 0">
    <conditions type="fef_dots" runline="stimLength seed ndots dotsize dwell centerx centery xradius yradius colorR colorG colorB">
        <stimLength>
            <value>1000</value>
        </stimLength>
        <seed>
            <value>0</value>
        </seed>
        <ndots>
            <value>1</value>
        </ndots>
        <dotsize>
            <value>1</value>
        </dotsize>
        <dwell>
            <value>100</value>
        </dwell>
        <centerx>
            <value>0</value>
        </centerx>
        <centery>
            <value>0</value>
        </centery>
        <xradius>
            <value>512</value>
        </xradius>
        <yradius>
            <value>384</value>
        </yradius>
        <colorR>
            <value>255</value>
        </colorR>
        <colorG>
            <value>255</value>
        </colorG>
        <colorB>
            <value>255</value>
        </colorB>
    </conditions>
    <params>
        <fixX>0</fixX>
        <fixY>0</fixY>
        <fixRad>5</fixRad>
        <fixColor>[0 0 255]</fixColor>
        <preStimFix>150</preStimFix>
        <timeToFix>1000</timeToFix>
        <saccadeTime>600</saccadeTime>
        <stayOnTarget>150</stayOnTarget>
        <saccadeLength>150</saccadeLength>
        <noFixTimeout>1000</noFixTimeout>
    </params>
    <randoms>
        <saccadeDir>0:359</saccadeDir>
    </randoms>
</stimulus>
