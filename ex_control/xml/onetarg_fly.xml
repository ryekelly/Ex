<stimulus name="onetarg_fly" repeats="5000" ex="ex_onetarg" bgColor="128 128 128">
    <conditions type="grating" runline="stimLength orientation phase spatial temporal centerx centery aperture contrast">
        <stimLength>10</stimLength>
        <orientation>0</orientation>
        <phase>0</phase>
        <spatial>.0481</spatial>
        <temporal>3.25</temporal>
        <centerx>[-100 100]</centerx>
        <centery>[-100 100]</centery>
        <aperture>50</aperture>
        <contrast>0.2</contrast>
    </conditions>
    <params>
        <timeToFix>1500</timeToFix>
        <saccadeTime>800</saccadeTime>
        <stayOnTarget>160</stayOnTarget>
        <fixColor>[255 0 100]</fixColor>
        <timeoutMS>2000</timeoutMS>        
        <saccadeLength>100</saccadeLength>        
        <fixXjump>50</fixXjump>    
        <fixYjump>50</fixYjump>    
    </params>
    <randoms>
        <preStimFix>800:50:1000</preStimFix>
        <fixXpos>0</fixXpos>
        <fixYpos>0</fixYpos>
    </randoms>
</stimulus>
